in(series_ids)\n","    url = BASE.format(ids=ids)\n","    if fecha_ini and fecha_fin:\n","        url = f\"{url}/{fecha_ini}/{fecha_fin}\"\n","\n","    params = {\"token\": token, \"mediaType\": \"json\", \"locale\": locale}\n","    r = _request_with_retries(url, params)\n","    payload = r.json()\n","\n","    series = payload.get(\"bmx\", {}).get(\"series\", [])\n","    if not series:\n","        raise RuntimeError(f\"Respuesta inesperada:\\n{json.dumps(payload, indent=2, ensure_ascii=False)}\")\n","\n","    frames = []\n","    for s in series:\n","        sid = s.get(\"idSerie\")\n","        titulo = s.get(\"titulo\", sid)\n","        obs = s.get(\"datos\", [])\n","        df = pd.DataFrame(obs)\n","        if df.empty:\n","            continue\n","        df[\"fecha\"] = pd.to_datetime(df[\"fecha\"], dayfirst=True, errors=\"coerce\")\n","        df[\"dato\"] = pd.to_numeric(df[\"dato\"].astype(str).str.replace(\",\", \"\"), errors=\"coerce\")\n","        df = df.dropna(subset=[\"fecha\", \"dato\"]).sort_values(\"fecha\").reset_index(drop=True)\n","        df[\"serie_id\"] = sid\n","        df[\"titulo\"] = titulo\n","        frames.append(df)\n","\n","    if not frames:\n","        raise RuntimeError(\"El API respondió sin datos para las series solicitadas.\")\n","    return pd.concat(frames, ignore_index=True)\n","\n","def _limpia_nombre_hoja(name):\n","    # Excel: máx 31 chars, sin : \\ / ? * [ ]\n","    name = re.sub(r'[:\\\\/?*\\[\\]]', ' ', str(name)).strip()\n","    return name[:31] if len(name) > 31 else name\n","\n","def _formato_condicional_variacion(ws, col_idx, n_rows):\n","    \"\"\"\n","    Aplica formato en 'variacion_pts':\n","      - Verde claro si > 0\n","      - Rojo claro si < 0\n","      - Blanco si == 0\n","      - Texto negro y 2 decimales\n","    \"\"\"\n","    if n_rows <= 1:\n","        return\n","\n","    col_letter = get_column_letter(col_idx)\n","    data_range = f\"{col_letter}2:{col_letter}{n_rows}\"\n","\n","    # Colores suaves (estilo Excel clásico)\n","    verde_claro = PatternFill(start_color=\"FFC6EFCE\", end_color=\"FFC6EFCE\", fill_type=\"solid\")\n","    rojo_claro  = PatternFill(start_color=\"FFF2DCDB\", end_color=\"FFF2DCDB\", fill_type=\"solid\")\n","    blanco      = PatternFill(start_color=\"FFFFFFFF\", end_color=\"FFFFFFFF\", fill_type=\"solid\")\n","    negro       = Font(color=\"FF000000\")\n","\n","    # > 0 -> verde claro\n","    ws.conditional_formatting.add(\n","        data_range,\n","        CellIsRule(operator=\"greaterThan\", formula=[\"0\"], font=negro, fill=verde_claro)\n","    )\n","    # < 0 -> rojo claro\n","    ws.conditional_formatting.add(\n","        data_range,\n","        CellIsRule(operator=\"lessThan\", formula=[\"0\"], font=negro, fill=rojo_claro)\n","    )\n","    # == 0 -> blanco\n","    ws.conditional_formatting.add(\n","        data_range,\n","        CellIsRule(operator=\"equal\", formula=[\"0\"], font=negro, fill=blanco)\n","    )\n","\n","    # Formato numérico 0.00 para todas las celdas de datos de esa columna\n","    for row in range(2, n_rows + 1):\n","        ws[f\"{col_letter}{row}\"].number_format = \"0.00\"\n","\n","def guardar_excel_por_serie(df, series_meta, nombre_base=\"banxico_tiie\"):\n","    \"\"\"\n","    Crea el Excel y:\n","    - En Colab: dispara la descarga al equipo local (carpeta 'Descargas' por defecto del navegador).\n","    - Fuera de Colab: guarda directamente en ~/Downloads/<nombre_base>.xlsx\n","    \"\"\"\n","    # Ruta destino según entorno\n","    filename = f\"{nombre_base}.xlsx\"\n","    if IS_COLAB:\n","        # En Colab escribimos en /content y luego forzamos la descarga\n","        xlsx_path = filename\n","    else:\n","        # En entorno local: guardar directo en ~/Downloads\n","        downloads_dir = os.path.expanduser(\"~/Downloads\")\n","        os.makedirs(downloads_dir, exist_ok=True)\n","        xlsx_path = os.path.join(downloads_dir, filename)\n","\n","    # Pivot ancho por fecha\n","    piv = (\n","        df.assign(nombre=df[\"serie_id\"].map(series_meta).fillna(df[\"titulo\"]))\n","          .pivot_table(index=\"fecha\", columns=\"nombre\", values=\"dato\")\n","          .sort_index()\n","    )\n","\n","    with pd.ExcelWriter(xlsx_path, engine=\"openpyxl\") as writer:\n","        # 1) crudo\n","        df.to_excel(writer, index=False, sheet_name=\"crudo\")\n","\n","        # 2) pivot\n","        piv.to_excel(writer, sheet_name=\"pivot\")\n","\n","        # 3) hojas por serie\n","        for sid, nombre in series_meta.items():\n","            sub = df[df[\"serie_id\"] == sid][[\"fecha\", \"dato\"]].rename(columns={\"dato\": \"valor\"}).copy()\n","            sub = sub.sort_values(\"fecha\").reset_index(drop=True)\n","\n","            sub[\"variacion_pts\"] = sub[\"valor\"].diff().fillna(0)\n","            sub[\"tasa_vector\"] = 0.3\n","            sub[\"valor_menos_tasa\"] = sub[\"valor\"] - sub[\"tasa_vector\"]\n","            sub = sub[[\"fecha\", \"valor\", \"variacion_pts\", \"tasa_vector\", \"valor_menos_tasa\"]]\n","\n","            sheet_name = _limpia_nombre_hoja(nombre)\n","            sub.to_excel(writer, index=False, sheet_name=sheet_name)\n","\n","            ws = writer.book[sheet_name]\n","            var_idx = list(sub.columns).index(\"variacion_pts\") + 1\n","            n_rows = len(sub) + 1\n","            _formato_condicional_variacion(ws, var_idx, n_rows)\n","\n","    print(f\"Excel generado en: {xlsx_path}\")\n","\n","    # Descarga al equipo local si estás en Colab\n","    if IS_COLAB:\n","        print(\"Iniciando descarga al equipo local (carpeta 'Descargas' del navegador)…\")\n","        files.download(xlsx_path)  # esto abre el diálogo de descarga del navegador\n","\n","#########################################################\n","#             EJECUCIÓN PRINCIPAL\n","#########################################################\n","if __name__ == \"__main__\":\n","    # 1) Token del SIE\n","    TOKEN = os.getenv(\"BANXICO_SIE_TOKEN\") or \"d138ccf0770a38edddbc95344a790c1d7f7edc7815f9250ffba06fff38fae53a\"\n","\n","    # 2) Series solicitadas -> pestañas separadas\n","    series_meta = {\n","        \"SF61745\":  \"Tasa objetivo\",\n","        \"SF331451\": \"TIIE 1 día\",\n","        \"SF43783\":  \"TIIE 28 días\",\n","        \"SF43878\":  \"TIIE 91 días\",\n","        \"SF111916\": \"TIIE 182 días\",\n","    }\n","\n","    # 3) Rango: del 01-ene-2025 al día de hoy\n","    FECHA_INI = \"2025-01-01\"\n","    FECHA_FIN = date.today().strftime(\"%Y-%m-%d\")\n","\n","    # 4) Descarga y genera Excel (se guarda/descarga según entorno)\n","    df = descargar_series(\n","        TOKEN,\n","        series_ids=list(series_meta.keys()),\n","        locale=\"es\",\n","        fecha_ini=FECHA_INI,\n","        fecha_fin=FECHA_FIN\n","    )\n","    guardar_excel_por_serie(df, series_meta, nombre_base=\"tasas_banxico_2025\")\n"],"metadata":{"colab":{"base_uri":"https://localhost:8080/","height":52},"id":"gfu8YtqKyLLc","executionInfo":{"status":"ok","timestamp":1766591903948,"user_tz":360,"elapsed":2956,"user":{"displayName":"Jair Naresh","userId":"17736354401446889507"}},"outputId":"973377cd-fe7c-4177-8a91-c51d8b9315d3"},"execution_count":1,"outputs":[{"output_type":"stream","name":"stdout","text":["Excel generado en: tasas_banxico_2025.xlsx\n","Iniciando descarga al equipo local (carpeta 'Descargas' del navegador)…\n"]},{"output_type":"display_data","data":{"text/plain":["<IPython.core.display.Javascript object>"],"application/javascript":["\n","    async function download(id, filename, size) {\n","      if (!google.colab.kernel.accessAllowed) {\n","        return;\n","      }\n","      const div = document.createElement('div');\n","      const label = document.createElement('label');\n","      label.textContent = `Downloading \"${filename}\": `;\n","      div.appendChild(label);\n","      const progress = document.createElement('progress');\n","      progress.max = size;\n","      div.appendChild(progress);\n","      document.body.appendChild(div);\n","\n","      const buffers = [];\n","      let downloaded = 0;\n","\n","      const channel = await google.colab.kernel.comms.open(id);\n","      // Send a message to notify the kernel that we're ready.\n","      channel.send({})\n","\n","      for await (const message of channel.messages) {\n","        // Send a message to notify the kernel that we're ready.\n","        channel.send({})\n","        if (message.buffers) {\n","          for (const buffer of message.buffers) {\n","            buffers.push(buffer);\n","            downloaded += buffer.byteLength;\n","            progress.value = downloaded;\n","          }\n","        }\n","      }\n","      const blob = new Blob(buffers, {type: 'application/binary'});\n","      const a = document.createElement('a');\n","      a.href = window.URL.createObjectURL(blob);\n","      a.download = filename;\n","      div.appendChild(a);\n","      a.click();\n","      div.remove();\n","    }\n","  "]},"metadata":{}},{"output_type":"display_data","data":{"text/plain":["<IPython.core.display.Javascript object>"],"application/javascript":["download(\"download_a2617034-a613-420a-8069-d51609f9157a\", \"tasas_banxico_2025.xlsx\", 82182)"]},"metadata":{}}]}]}